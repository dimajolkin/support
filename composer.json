{
    "name": "temporal-php/sugar",
    "type": "library",
    "license": "MIT",
    "description": "Helpers that simplify working with the Temporal PHP SDK",
    "keywords": ["temporal", "helper"],
    "authors": [
        {
            "name": "Aleksei Gagarin (roxblnfk)",
            "homepage": "https://github.com/roxblnfk"
        },
        {
            "name": "Pavel Buchnev (butschster)",
            "homepage": "https://github.com/butschster"
        }
    ],
    "autoload": {
        "psr-4": {
            "Temporal\\Sugar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Temporal\\Sugar\\Tests\\": "tests/"
        }
    },
    "funding": [
        {
            "type": "patreon",
            "url": "https://patreon.com/roxblnfk"
        },
        {
            "type": "patreon",
            "url": "https://patreon.com/butschster"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "temporal/sdk": "^2.7",
        "buggregator/trap": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "vimeo/psalm": "^5.18"
    }
}
